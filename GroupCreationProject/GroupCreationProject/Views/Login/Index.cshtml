@{
    Layout = null;
}

<!DOCTYPE html>

<html>
<head>
    <meta name="viewport" content="width=device-width" />
    <title>Login</title>
    
    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />
    <link rel="stylesheet" href="~/css/site.css" asp-append-version="true" />

    <style>

        body, html {
            height:100%;
            width: 100%;
        }

        body{
            display: flex;
            background-image: linear-gradient(to bottom right, floralwhite, #C1E1C1);
            background-repeat: no-repeat;
        }

        .loginbox, .signupbox{
            margin:auto;
            background-color: transparent;
            border-radius: 25px;
            padding: 20px;
            padding-bottom: 10px;
            padding-top: 10px;
            font-family: 'Lucida Sans';
        }

        .loginbox > *{
            margin-bottom:5px;
        }

        .bg-success {
            font-family: 'Lucida Sans';
            display: inline-block;
            padding: 10px 20px;
            text-align: center;
            text-decoration: none;
            color: #ffff;
            background-image: linear-gradient(to right, black, black);
            border-radius: 6px;
            outline: none;
        }

        .col-4{
            font-family: 'Lucida Sans';
            font-size: 18px;
        }
    </style>

</head>
<body>

    <div class="loginbox">
        <center>
        <div class="row">
            <div class="col-12">
                <h2><strong>Log In</strong></h2>
            </div>
        </div>
        </center>
        <form action="Login/Login" method="post">
            <p></p>
            <div class="row">
                <div class="col-4"><label for="tb_username">Username </label></div>
                <div class="col-8"><input type="email" name="Email" id="tb_username" style="border-radius: 14px;"></div>
            </div>
            <p></p>
            <div class="row">
                <div class="col-4"><label for="tb_pwd">Password </label></div>
                <div class="col-8"><input type="password" name="Password" id="tb_pwd" style="border-radius: 14px; "></div>
            </div>
            <p></p>
            <div class="row">
                <center>
                <div class="col-3">
                    <button type="submit" class="bg-success" >Login</button>
                </div>
                </center>
               <!--<div class="col-4" style="text-align:center">
                    <button class="bg-info" onclick="showSignUpModal()" >Sign Up</button>
                </div>--> 
            </div>
        
        </form>

        <partial name="~/Views/Login/_signupModal.cshtml" />
    </div>


    <script>

        function LoginClicked(){
            $.ajax({
                type: "POST",
                url: "https://localhost:7235/Login/auth",       
                data: {
                    username : "Sean",
                    password : "bar",
                }
                async: true,
                success: function (data, stats, jqxhr) {
                    console.log("succ");
                    debugger;
                    document.cookie = "username=" + data.name ";type=" + data.type;
                },
                error: function () {
                    return "error";
                }
    });
        }

    </script>

    <script src="~/lib/jquery/dist/jquery.min.js"></script>
    <script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script>
    <script src="~/js/site.js" asp-append-version="true"></script>
<script type="text/javascript">

function showSignUpModal(){
    $('#signupmodal').modal('show');

}

</script>

</body>

</html>


