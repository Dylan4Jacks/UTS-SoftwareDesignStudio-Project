<div class="modal fade" role="dialog" tabindex="-1" id="signupmodal">
    <div class="modal-dialog" role="document">
        <div">
            <div class="signupbox" >
                <div class="row">
                    <div class="col-12">
                        <h2>Login</h2>
                    </div>
                </div>
                <div class="row">
                    <div class="col-4"><label for="tb_username">Username: </label></div>
                    <div class="col-8"><input type="text" id="tb_username"></div>
                </div>
                <div class="row">
                    <div class="col-4"><label for="tb_pwd">Password: </label></div>
                    <div class="col-8"><input type="password" id="tb_pwd"></div>
                </div>
                <div class="row">
                    <div class="col-4"><label for="tb_pwd2">Repeat Password: </label></div>
                    <div class="col-8"><input type="password" id="tb_pwd2"></div>
                </div>
                <div class="row">
                    <div class="col-4" style="text-align:center" data-dismiss="modal"><button class="bg-info">Sign Up</button></div>
                </div>
            </div>
        </div>
    </div>
</div>
